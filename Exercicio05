package exerciciosarraylist;

import java.util.ArrayList;
import javax.swing.JOptionPane;

/**
 *
 * @author Alunos
 */
public class Exercicio05 {
    
    public static void main(String [] args){
        
       
        ArrayList<String> nomes = new ArrayList<>();
        for (int i = 0; i < 4 ; i++){
            nomes.add(JOptionPane
            .showInputDialog("Nome: " ));
        }
        String outroNome = JOptionPane
            .showInputDialog("Digite outro nome: ");
        
        System.out.println("Nomes: " +"\n");
        System.out.println(nomes.get(0));
        System.out.println(nomes.get(1));
        System.out.println(nomes.get(2));
        System.out.println(nomes.get(3));
        
        for (int i = 0; i <nomes.size(); i++){
            if(outroNome.equalsIgnoreCase(nomes.get(i))){
                System.out.println("\nO nome " +outroNome +" foi encontrado na posição "+i+"!");
            }
    }
        
        
        
            
    }
        
}
